{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@stylistic/all-extends"
    ],
    "ignorePatterns": [
        "*.js",
        "*.d.ts",
        "*.json",
        "dist/",
        "node_modules/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "tsconfigRootDir": ".",
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "import",
        "@stylistic",
        "@typescript-eslint"
    ],
    "root": true,
    "rules": {},
    "settings": {
        "import/resolver": {
            "typescript": true
        }
    }
}
